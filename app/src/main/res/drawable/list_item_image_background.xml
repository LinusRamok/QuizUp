<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/listItemButtonBackgroundPadding"
                android:top="@dimen/listItemButtonBackgroundPadding"
                android:right="@dimen/listItemButtonBackgroundPadding"
                android:bottom="@dimen/listItemButtonBackgroundPadding" />
            <corners android:topLeftRadius="@dimen/listItemButtonBackgroundRadius"
                android:topRightRadius="@dimen/listItemButtonBackgroundRadius"/>
            <stroke
                android:width="@dimen/listItemButtonBackgroundStroke"
                android:color="@color/colorPrimary" />
            <solid android:color="@color/windowBackground" />
        </shape>
    </item>

</selector>

