<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:startColor="@color/playButton"
                android:centerColor="@color/textColorPrimary"
                android:endColor="@color/playButton"
                android:type="linear" />

            <corners
                android:radius="0dp"/>

        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:startColor="@color/playButton"
                android:centerColor="@color/textColorPrimary"
                android:endColor="@color/playButton"
                android:type="linear" />

            <corners
                android:radius="0dp"/>

        </shape>
    </item>

    <item
        android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:startColor="@color/windowBackground"
                android:centerColor="@color/playButton"
                android:endColor="@color/windowBackground"
                android:type="linear" />

            <corners
                android:radius="0dp"/>

        </shape>
    </item>

</selector>

